<% products.forEach(product => { %>
<div class="product-card">
  <a href="/products/description/<%= product.id %>">
    <div class="img-product">
      <img src="/img/products-img/<%= product.image %>" alt="<%= product.brand %> <%= product.model %>" class="size-img" />
    </div>
    <div class="description-product">
      <p class="name"><%= product.brand %> <%= product.model %></p>
      <p class="detail"><%= product.description %></p>
      <p class="price"><%= product.price %></p>
    </div>
  </a>
</div>
<% }) %>
