<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
  </head>
  <body>
    <header class="header"><%- include("./partials/header.ejs")%></header>
    <main>
      <h3 class=""> > <%=product.brand%> <%=product.model%></h3>
      <div class="cube">
        <div
          id="carouselExampleCaptions"
          class="carousel slide"
          data-bs-ride="carousel">
          <div class="carousel-indicators">
            <button
              type="button"
              data-bs-target="#carouselExampleCaptions"
              data-bs-slide-to="0"
              class="active"
              aria-current="true"
              aria-label="Slide 1">
            </button>
            <button
              type="button"
              data-bs-target="#carouselExampleCaptions"
              data-bs-slide-to="1"
              aria-label="Slide 2">
            </button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <a href="#">
                <img src="/img/products-img/<%=product.image%>" class="d-block w-100" />
              <div class="carousel-caption d-none d-md-block">
                </a>
              </div>
            </div>
            <div class="carousel-item">
              <a href="#">
              <img src="/img/products-img/<%=product.image%>" class="d-block w-100" />
              <div class="carousel-caption d-none d-md-block">
                </a>
              </div>
            </div>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExampleCaptions"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExampleCaptions"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
  <div class="margin-top centered">
    <h2>Precio de lista: $<%=product.price%></h2>
  </div>
  <div class="centered">
    <h3 class="h3-discount">Bonificación <%=product.discount%>% compra online</h3>
  </div>
  <div class="centered">
    <h1 class="h1-final-price">¡Precio final online $<%=Math.round(product.price*(1-product.discount/100),0)%>! </h1>
  </div>
  <div class="buttons2 margin-top centered">
    <button class="button-send" type="submit">Realizar consulta</button>
    <button class="button-send" type="submit">¡Comenzar compra!</button>
  </div>
  <div>
  <h3 class="h3-description-title margin-top">Características</h3>
  <p class="h5-text">Año de fabricación: <%=product.manufacture_year%></p>
  <p class="h5-text">Tipo de Combustible: <%=product.motor_type%></p>
  <p class="h5-text">Transmisión: <%=product.transmission%></p>
  <p class="h5-text">Número de Puertas: <%=product.door_number%></p>
  <p class="h5-text">Color: <%=product.color%></p>
  </div>
  
  <div class="margin-top centered buttons2">

    <% if (edit_delete) { %>
      <form action="/products/edit/<%=product.id%>" method="" >
        <button type="submit" class="button-send delete">EDITAR PRODUCTO</button>
      </form>
  
      <form action="/products/<%=product.id%>?_method=DELETE" method="POST" >
        <button type="submit" class="button-send delete">ELIMINAR</button>
      </form>
    <% } %>
    
  </div>


    </main>
    <footer><%- include("./partials/footer.ejs")%></footer>
  </body>
</html>
